{{#if resume.interests.length}}
    <section class="section-interests">
        {{> components/title icon='beer' title='Interests'}}
        {{#each resume.interests}}
            <div class="card">
                {{#if name}}
                    <div class="card-block">
                        <h3 class="card-title">
                            {{name}}
                        </h3>
                    </div>
                {{/if}}
                {{#if keywords.length}}
                    <div class="card-footer">
                        <div class="card-tags icon-item" href="{{website}}">
                            <i class="fas fa-tags text-primary"></i>
                            <div class="tag-list">
                                {{#each keywords}}
                                    <span class="tag text-secondary">{{this}}</span>
                                {{/each}}
                            </div>
                        </div>
                    </div>
                {{/if}}
            </div>
        {{/each}}
    </section>
{{/if}}
