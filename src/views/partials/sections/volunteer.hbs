{{#if resume.volunteer.length}}
    <section class="section-volunteer">
        {{> components/title icon='hands-helping' title='Volunteer'}}

        {{#each resume.volunteer}}
            <div class="card">
                {{#if startDate}}
                    <div class="card-header">
                        <span class="card-text card-dates">
                            {{formatDate startDate}} - {{#if endDate}}{{formatDate endDate}} <span class="date-span">({{dateDiff startDate endDate}}){{/if}}</span>
                        </span>
                        {{#unless endDate}}
                            <span class="badge badge-outline-secondary">current</span>
                        {{/unless}}
                    </div>
                {{/if}}

                {{#if position}}
                    <div class="card-block">
                        <h3 class="card-title">
                            {{position}}
                            <span class="card-subtitle">
                                {{organization}}
                                {{#if website.length}}
                                | <a class="text-secondary" href="{{website}}">
                                    <i class="fas fa-link"></i>
                                    <span>{{removeSchema website}}</span>
                                </a>
                            {{/if}}
                            </span>
                        </h3>
                        {{#if summary}}
                            <div class="card-text">{{{summary}}}</div>
                        {{/if}}
                    </div>
                {{/if}}
                {{#or highlights.length website}}
                    <div class="card-footer text-muted">
                        {{#if highlights.length}}
                            <ul class="card-highlights">
                                {{#each highlights}}
                                    <li class="badge badge-outline-secondary">
                                        {{this}}
                                    </li>
                                {{/each}}
                            </ul>
                        {{/if}}
                    </div>
                {{/or}}
            </div>
        {{/each}}
    </section>
{{/if}}
